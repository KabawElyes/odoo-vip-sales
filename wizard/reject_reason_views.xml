<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_vip_reject_wizard_form" model="ir.ui.view">
        <field name="name">vip.reject.wizard.form</field>
        <field name="model">vip.reject.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="action_reject" string="Reject Order" type="object" class="btn-danger"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_vip_reject_wizard" model="ir.actions.act_window">
        <field name="name">Reject Order</field>
        <field name="res_model">vip.reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>